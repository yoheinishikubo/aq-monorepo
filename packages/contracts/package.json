{
  "name": "uniswap-aave-mock",
  "version": "1.0.0",
  "private": true,
  "description": "Uniswap V3 and AAVE V3 (USDT-Only) mock with 4 ERC20s and swaps (Hardhat + TypeScript)",
  "license": "MIT",
  "type": "commonjs",
  "packageManager": "bun@1.2.22",
  "scripts": {
    "devnet": "bunx hardhat node",
