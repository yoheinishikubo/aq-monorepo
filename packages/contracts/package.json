    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@quant-finance/solidity-datetime": "^2.2.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^20",
    "@yoheinishikubo/sstore2": "https://github.com/yoheinishikubo/sstore2.git",
